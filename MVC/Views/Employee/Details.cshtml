@model MVC.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<div style="font-family: Arial">

    <h2>Employee Details</h2>

    <table>

        <tr>
            <td>
                <b>Employee ID</b>
            </td>
            <td>
                @Model.EmployeeID
            </td>
        </tr>

        <tr>
            <td>
                <b>Name</b>
            </td>
            <td>
                @Model.Name
            </td>
        </tr>

        <tr>
            <td>
                <b>Gender</b>
            </td>
            <td>
                @Model.Gender
            </td>
        </tr>

        <tr>
            <td>
                <b>City</b>
            </td>
            <td>
                @Model.City
            </td>
        </tr>

        <tr>
            <td>
                <b>Deparment ID</b>
            </td>
            <td>
                @Model.DepartmentID
            </td>
        </tr>

    </table>

    <p>@Html.ActionLink("Back To List", "Index", new { deparmentId = Model.DepartmentID})</p>

</div>

