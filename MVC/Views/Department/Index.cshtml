@using MVC.Models;

@model IEnumerable<Department>

@{
    ViewBag.Title = "Departments List";
}

<div style="font-family: Arial">

    <h2>Departments List</h2>

    <ul>
        @foreach (Department department in Model)
        {
            string departmentDetails = department.Name;

            <li>
                @Html.ActionLink(departmentDetails, "Index", "Employee", new { deparmentId = department.ID }, null)
            </li>
        }
    </ul>

</div>

